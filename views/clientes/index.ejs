<%- include("../includes/header.ejs",{title:title}); %>

<table id="principal"></table>

<a class="btn btn-primary text-light" href="/clientes/novo">Adicionar</a>

<script>
    new gridjs.Grid({
        columns: [
            {
                id:'inp_pessoa',
                name: "Tipo",
                with: '5%'
            },
            {
                id:'inp_razaoSocial',
                name: "Nome",
                with: '60%'
            },
            {
                id:'inp_telefone',
                name: "Contato",
                with: '30%'
            },
            {
                id:'_id',
                name:'',
                formatter:(cell) => gridjs.html(`<a href="/clientes/editar/${cell}" class="btn btn-primary"><i class="fa-solid fa-pen"></i></a>`),
            },
        ],
        data:<%-clienteData-%>,
        search: true,
        language:{
            'search':{
                'placeholder': 'Pesquisar',
            },
        },
        pagination: {
            limit: 10,
            summary: false,
        },
    }).render(document.getElementById("principal"));
</script>

