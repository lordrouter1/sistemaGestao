<%- include("../includes/header.ejs",{title:title});%>

<script src="/public/js/jsBarCode.min.js"></script>
<script src="/public/js/qrcode.min.js"></script>

<input type="hidden" id="inp_id" value="">

<form id="form_cadastro">
   
    <div class="card">
        <div class="card-header bg-primary text-light">
            <strong>Dados Gerais</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <label for="inp_nome">Nome</label>
                    <input type="text" name="inp_nome" id="inp_nome" class="form-control">
                </div>
                <div class="col-4">
                    <label for="inp_ativo">Ativo</label>
                    <select name="inp_ativo" id="inp_ativo" class="form-control">
                        <option value="1">Sim</option>
                        <option value="0">Não</option>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label for="inp_descricao">Descrição</label>
                    <input type="text" name="inp_descricao" id="inp_descricao" class="form-control">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label for="inp_valVenda">Preço de venda</label>
                    <input type="number" step="0.01" name="inp_valVenda" id="inp_valVenda" class="form-control">
                </div>
                <div class="col">
                    <label for="inp_valCompra">Preço de compra</label>
                    <input type="number" step="0.01" name="inp_valCompra" id="inp_valCompra" class="form-control">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label for="inp_marca">Marca</label>
                    <select name="inp_marca" id="inp_marca" class="form-control">
                        <option value="" selected disabled></option>
                        <%- marcas.map(marca => `<option value="${marca['_id']}">${marca['nome']}</option>`).join(' '); %>
                    </select>
                </div>
                <div class="col">
                    <label for="inp_categoria">Categoria</label>
                    <select name="inp_categoria" id="inp_categoria" class="form-control">
                        <option value="" selected disabled></option>
                        <%- categorias.map(cat => `<option value="${cat._id}" sub='["${cat.subcategoria.map(sub => sub.nome).join(`","`)}"]'>${cat.nome}</option>`).join(` `) %>
                    </select>
                </div>
                <div class="col">
                    <label for="inp_subCategoria">Subcategoria</label>
                    <select name="inp_subCategoria" id="inp_subCategoria" class="form-control">
                        <option value="" selected disabled></option>
                    </select>
                </div>
            </div>
            
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-light">
                    <strong>Identificação</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <input type="text" id="inp_barcodeVal" class="form-control" placeholder="Código Produto">
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col d-flex">
                                    <div id="inp_qrCode" class="m-auto"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col d-flex">
                                    <svg id="inp_codigoDeBarras" class="m-auto"></svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-light">
                    <strong>Imagem</strong>
                </div>
                <div class="card-body d-flex">
                    <div class="w-100 h-100 container-foto m-auto" id="inp_fotoBotao" style="max-width:300px;max-height:300px;">
                        <img id="inp_fotoSrc" class="m-auto w-100 h-100">
                        <div class="overlay d-flex">
                            <i class="fa-solid fa-cloud-arrow-up m-auto"></i>
                        </div>
                    </div>
                    <input type="file" id="inp_foto" class="d-none">
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-light">
                    <strong>Observações</strong>
                </div>
                <div class="card-body">
                    <textarea name="inp_obs" id="inp_obs" class="form-control h-100" rows="10"></textarea>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mt-3">
        <div class="card-header bg-primary text-light">
            <strong>Estoque</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <input type="text" name="inp_varNome[]" placeholder="Variação" class="form-control">
                </div>
                <div class="col">
                    <input type="text" name="inp_varQuantia[]" placeholder="Quantia" class="form-control">
                </div>
                <div class="col">
                    <input type="text" name="inp_varPreco[]" id="">
                </div>
            </div>
            <div id="varContainer">

            </div>
            <button type="button" class="btn btn-primary">Adicionar</button>
        </div>
    </div>
    
    <div class="card mt-3">
        <div class="card-header bg-primary text-light">
            <strong>Fiscal</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    <label for="inp_origem">Origem</label>
                    <select name="inp_origem" id="inp_origem" class="form-control" disabled>
                        <option value="0">Nacional</option>
                        <option value="1">Exterior</option>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label for="inp_ncm">NCM</label>
                    <input type="text" name="inp_ncm" id="inp_ncm" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="inp_cest">CEST</label>
                    <input type="text" name="inp_cest" id="inp_cest" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="inp_cfop">CFOP</label>
                    <input type="text" name="inp_cfop" id="inp_cfop" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="inp_cst">CST</label>
                    <input type="text" name="inp_cst" id="inp_cst" class="form-control" disabled>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label for="inp_icms">ICMS</label>
                    <input type="text" name="inp_icms" id="inp_icms" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="inp_ipi">IPI</label>
                    <input type="text" name="inp_ipi" id="inp_ipi" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="inp_pis">PIS</label>
                    <input type="text" name="inp_pis" id="inp_pis" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="inp_cofins">COFINS</label>
                    <input type="text" name="inp_cofins" id="inp_cofins" class="form-control" disabled>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header bg-primary text-light">
            <strong>Entrega</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <label for="inp_altura">Altura(cm)</label>
                    <input type="number" name="inp_altura" id="inp_altura" class="form-control">
                </div>
                <div class="col">
                    <label for="inp_largura">Largura(cm)</label>
                    <input type="number" name="inp_largura" id="largura" class="form-control">
                </div>
                <div class="col">
                    <label for="inp_profundidade">Profundidade(cm)</label>
                    <input type="number" name="inp_profundidade" id="inp_profundidade" class="form-control">
                </div>
                <div class="col">
                    <label for="inp_peso">Peso(g)</label>
                    <input type="number" name="inp_peso" id="inp_peso" class="form-control">
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="/produtos" class="btn btn-secondary text-light">Voltar</a>
        <%- 
            (produto['_id']!=undefined)?
            '<div id="btn_excluir" class="btn btn-danger text-light mr-1">Excluir</div><button type="submit" class="btn btn-primary text-light">Editar</button>':
            '<button type="submit" class="btn btn-primary text-light">Salvar</button>' 
        -%>
    </div>

</form>

<script src="/public/js/views/produtos/produto/events.js"></script>

<%- include("../includes/footer.ejs"); %>