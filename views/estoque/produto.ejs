<%- include("../includes/header.ejs",{title:title});%>

<script src="/public/js/jsBarCode.min.js"></script>
<script src="/public/js/qrcode.min.js"></script>

<input type="hidden" id="id" value="">

<form id="form_cadastro">
   
    <div class="card">
        <div class="card-header bg-primary text-light">
            <strong>Dados Gerais</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <label for="nome">Nome</label>
                    <input type="text" name="nome" id="nome" class="form-control">
                </div>
                <div class="col-4">
                    <label for="ativo">Ativo</label>
                    <select name="ativo" id="ativo" class="form-control">
                        <option value="1">Sim</option>
                        <option value="0">Não</option>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label for="descricao">Descrição</label>
                    <input type="text" name="descricao" id="descricao" class="form-control">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label for="valVenda">Preço de venda</label>
                    <input type="number" step="0.01" name="valVenda" id="valVenda" class="form-control">
                </div>
                <div class="col">
                    <label for="valCompra">Preço de compra</label>
                    <input type="number" step="0.01" name="valCompra" id="valCompra" class="form-control">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label for="marca">Marca</label>
                    <select name="marca" id="marca" class="form-control">
                        <option value="" selected disabled></option>
                        <%- marcas.map(marca => `<option value="${marca['_id']}">${marca['nome']}</option>`).join(' '); %>
                    </select>
                </div>
                <div class="col">
                    <label for="categoria">Categoria</label>
                    <select name="categoria" id="categoria" class="form-control">
                        <option value="" selected disabled></option>
                        <%- categorias.map(cat => `<option value="${cat._id}" sub='["${cat.subcategoria.map(sub => sub.nome).join(`","`)}"]'>${cat.nome}</option>`).join(` `) %>
                    </select>
                </div>
                <div class="col">
                    <label for="subCategoria">Subcategoria</label>
                    <select name="subCategoria" id="subCategoria" class="form-control">
                        <option value="" selected disabled></option>
                    </select>
                </div>
            </div>
            
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-light">
                    <strong>Identificação</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <input type="text" id="barcodeVal" class="form-control" placeholder="Código Produto">
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col d-flex">
                                    <div id="qrCode" class="m-auto"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col d-flex">
                                    <svg id="codigoDeBarras" class="m-auto"></svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-light">
                    <strong>Imagem</strong>
                </div>
                <div class="card-body d-flex">
                    <div class="w-100 h-100 container-foto m-auto" id="fotoBotao" style="max-width:300px;max-height:300px;">
                        <img id="fotoSrc" class="m-auto w-100 h-100">
                        <div class="overlay d-flex">
                            <i class="fa-solid fa-cloud-arrow-up m-auto"></i>
                        </div>
                    </div>
                    <input type="file" id="foto" class="d-none">
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-light">
                    <strong>Observações</strong>
                </div>
                <div class="card-body">
                    <textarea name="obs" id="obs" class="form-control h-100" rows="10"></textarea>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mt-3">
        <div class="card-header bg-primary text-light">
            <strong>Variações</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <select name="variacao[]" class="form-control">
                        <option value="0">Nao possui</option>
                        <%- variacoes.map(v => `<option value="${v['_id']}" class="varOpt">${v['nome']}</option>`).join(``) -%>
                    </select>
                </div>
                <div class="col-1"></div>
            </div>
            <div id="tbl_var">

            </div>
            <button type="button" class="btn btn-primary mt-3" id="btn_addVar">Adicionar</button>
        </div>
    </div>
    
    <div class="card mt-3">
        <div class="card-header bg-primary text-light">
            <strong>Fiscal</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    <label for="origem">Origem</label>
                    <select name="origem" id="origem" class="form-control" disabled>
                        <option value="0">Nacional</option>
                        <option value="1">Exterior</option>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label for="ncm">NCM</label>
                    <input type="text" name="ncm" id="ncm" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="cest">CEST</label>
                    <input type="text" name="cest" id="cest" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="cfop">CFOP</label>
                    <input type="text" name="cfop" id="cfop" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="cst">CST</label>
                    <input type="text" name="cst" id="cst" class="form-control" disabled>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label for="icms">ICMS</label>
                    <input type="text" name="icms" id="icms" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="ipi">IPI</label>
                    <input type="text" name="ipi" id="ipi" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="pis">PIS</label>
                    <input type="text" name="pis" id="pis" class="form-control" disabled>
                </div>
                <div class="col">
                    <label for="cofins">COFINS</label>
                    <input type="text" name="cofins" id="cofins" class="form-control" disabled>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header bg-primary text-light">
            <strong>Entrega</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <label for="altura">Altura(cm)</label>
                    <input type="number" name="altura" id="altura" class="form-control">
                </div>
                <div class="col">
                    <label for="largura">Largura(cm)</label>
                    <input type="number" name="largura" id="largura" class="form-control">
                </div>
                <div class="col">
                    <label for="profundidade">Profundidade(cm)</label>
                    <input type="number" name="profundidade" id="profundidade" class="form-control">
                </div>
                <div class="col">
                    <label for="peso">Peso(g)</label>
                    <input type="number" name="peso" id="peso" class="form-control">
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="/produtos" class="btn btn-secondary text-light">Voltar</a>
        <%- 
            (produto['_id']!=undefined)?
            '<div id="btn_excluir" class="btn btn-danger text-light mr-1">Excluir</div><button type="submit" class="btn btn-primary text-light">Editar</button>':
            '<button type="submit" class="btn btn-primary text-light">Salvar</button>' 
        -%>
    </div>

</form>

<script src="/public/js/views/produtos/produto/events.js"></script>
<script src="/public/js/views/produtos/produto/functions.js"></script>

<%- include("../includes/footer.ejs"); %>