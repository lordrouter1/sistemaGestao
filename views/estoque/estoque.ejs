
<%- include("../includes/header.ejs",{title:title});%>

<script src="/public/js/views/estoque/estoque/functions.js"></script>

<input type="hidden" id="_id" value="<%- estoque['_id'] -%>">

<form id="form_cadastro" method="post" action="/estoque/ed/<%- estoque['_id'] || 0 -%>">
    <input type="hidden" name="csrfToken" value="<%- csrfToken -%>">
    <div class="card">
        <div class="card-header bg-primary text-light">
            <strong>Dados Gerais</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <label for="produto">Produto</label>
                    <select name="produto" id="produto" class="form-control" required>
                        <option value=""></option>
                        <%-
                            produtos.map(r => `<option value="${r._id}" ${(r._id == estoque['produto'])?'selected':''}>${r.nome}</option>`);
                        -%>
                    </select>
                    <input type="hidden" name="nome" id="nome" value="<%- estoque['nome'] -%>">
                </div>
            </div>
        </div>
    </div>

    <%- JSON.stringify(variacoes) -%>

    <div class="card mt-3">
        <div class="card-header bg-primary text-light">
            <strong>Variações</strong>
        </div>
        <div class="card-body">
            <div id="variacoesHeader">
            </div>
            <button type="button" class="btn btn-primary mt-3" style="display:none" id="btnAdicionar">adicionar</button>
        </div>
    </div>

    <div class="mt-3">
        <a href="/estoque" class="btn btn-secondary text-light">Voltar</a>
        <%- 
            (estoque['_id']!=undefined)?
            '<div id="btn_excluir" class="btn btn-danger text-light mr-1">Excluir</div><button type="submit" class="btn btn-primary text-light">Editar</button>':
            '<button type="submit" class="btn btn-primary text-light">Salvar</button>' 
        -%>
    </div>

</form>

<script src="/public/js/views/estoque/estoque/events.js"></script>
<script src="/public/js/views/estoque/estoque/sockets.js"></script>

<%- include("../includes/footer.ejs"); %>
    