
<%- include("../includes/header.ejs",{title:title});%>

<script src="/public/js/views/teste/teste/functions.js"></script>

<input type="hidden" id="_id" value="<%- teste['_id'] -%>">

<form id="form_cadastro" method="post" action="/teste/ed/<%- teste['_id'] || 0 -%>">

    <div class="card">
        <div class="card-header bg-primary text-light">
            <strong>Dados Gerais</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <label for="nome">Nome</label>
                    <input type="text" name="nome" id="nome" class="form-control" value="<%- teste['nome'] -%>">
                </div>
                <div class="col-4">
                    <label for="ativo">Ativo</label>
                    <select name="ativo" id="ativo" class="form-control">
                        <option value="1" <%- (teste['ativo'] != '0')?'selected':'' -%>>Sim</option>
                        <option value="0" <%- (teste['ativo'] == '0')?'selected':'' -%>>Não</option>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <label for="descricao">Descrição</label>
                    <input type="text" name="descricao" id="descricao" class="form-control" value="<%- teste['descricao'] -%>">
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="/teste" class="btn btn-secondary text-light">Voltar</a>
        <%- 
            (teste['_id']!=undefined)?
            '<div id="btn_excluir" class="btn btn-danger text-light mr-1">Excluir</div><button type="submit" class="btn btn-primary text-light">Editar</button>':
            '<button type="submit" class="btn btn-primary text-light">Salvar</button>' 
        -%>
    </div>

</form>

<script src="/public/js/views/teste/teste/events.js"></script>
<script src="/public/js/views/teste/teste/sockets.js"></script>

<%- include("../includes/footer.ejs"); %>
    